    </nav>
</header>
<main id="addLocations">
    <section>
        <h1>Add your found location</h1>
        <a href="/locations">back</a>
    </section>

    <form action="/add-locations" method="post" enctype="multipart/form-data">
        {{! <input name="useMyLocation" type="text" id="in" /> }}
        <section>
            <p id="javascriptOffAtAdd">Turn on Javascript to use the filter function</p>
            <button id="findLocation" onclick="findip()" type="button">Use my location</button>
        </section>
        <label id="countryFilled">
            Country:
            <input id="country" name="country" type="text" required />
            {{! <p ></p> }}
        </label>
        <label id="cityFilled">
            City:
            <input id="city" name="city" type="text" required />
            {{! <p id="cityFilled"></p> }}
        </label>
        <label id="AtFilled">
            Adress or near by park:
            <input id="park" name="adress" type="text" required />
            {{! <p id="AtFilled"></p> }}
        </label>
        <label>
            Picture of the location:
            <input name="image" type="file" accept="image" required />
        </label>
        <label>
            Discription:
            <textarea required name="discription" cols="30" rows="1"></textarea>
        </label>
        <label>
            Setup:
            <input name="setup" type="text" required />
        </label>
        {{! <input type="text" name="ipAdress" id="ipAdress" /> }}
        <input type="submit" value="add" />
    </form>
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/getLocation.js"></script>