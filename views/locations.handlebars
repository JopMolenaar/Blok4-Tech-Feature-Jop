<header>
    <img src="/images/plancheimg.png" alt="Calisthenics website logo" />
    <nav>
        <ul>
            <li>
                <a href="#">Matches</a>
            </li>
            <li>
                <a href="#">Account</a>
            </li>
        </ul>
    </nav>
</header>
<main id="locations">
    <section>
        <h1>Calisthenics locations</h1>
        <a href="/locations/add">Add location</a>

    </section>
    <ul>
        {{#each result}}
            <li class="{{this.country}} {{this.city}} {{this.adressForClass}} {{this.setup}}">
                <div>
                    <img src="/upload/{{this.img}}" alt="Picture of the place" />
                </div>

                <p>{{this.country}}</p>
                <p>{{this.city}}</p>
                <p>{{this.adress}}</p>
                <p>{{this.discription}}</p>
                <p>#{{this.setup}}</p>
            </li>
        {{/each}}
    </ul>
    <section>
        <h2>Filter locations</h2>
        <p id="javascriptOff">Turn on Javascript to use the filter function</p>
        <label for="country">Country
            <select name="country">
                <option value="0">-</option>
                {{#each result}}
                    <option value="{{this.country}}">{{this.country}}</option>
                {{/each}}
            </select>
        </label>
        <label for="city">City
            <select name="city">
                <option value="0">-</option>
                {{#each result}}
                    <option value="{{this.city}}">{{this.city}}</option>
                {{/each}}
            </select>
        </label>
        <label for="setup">Setup
            <select name="setup">
                <option value="0">-</option>
                <option value="Highbar">Highbar</option>
                <option value="lowbar">Lowbar</option>
                <option value="dipbars">Dipbars</option>
                <option value="ladder">Ladder</option>
                <option value="pole">Pole</option>
            </select>
        </label>
        <label for="street">Street
            <select name="street">
                <option value="0">-</option>
                {{#each result}}
                    <option value="{{this.adressForClass}}">{{this.adressForClass}}</option>
                {{/each}}
            </select>
        </label>
    </section>
</main>

<script src="/js/filter.js"></script>